<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="회원 정보"
                android:textColor="#000000"
                android:textSize="30dp"
                android:textStyle="bold"
                android:fontFamily="@font/bmhannaair_ttf"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            >

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/nowUserID"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="아이디"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:fontFamily="@font/bmhannaair_ttf"

                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:id="@+id/nowUserEmail"
                android:text="메일"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:drawableStart="@drawable/ic_mail_outline_black_24dp"
                android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                android:fontFamily="@font/bmhannaair_ttf"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:id="@+id/nowPotname"
                android:text="화분명"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:drawableStart="@drawable/ic_local_florist_black_24dp"
                android:drawableLeft="@drawable/ic_local_florist_black_24dp"
                android:fontFamily="@font/bmhannaair_ttf"
                android:layout_marginTop="10dp"
                />


            <Button
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#179F3A"
                android:text="회원정보 수정"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:fontFamily="@font/bmhannaair_ttf"
                android:id="@+id/updateMemberButton"
                android:background="@drawable/edge2"
                />




            <Button
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#179F3A"
                android:text="비밀번호 변경"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:fontFamily="@font/bmhannaair_ttf"
                android:id="@+id/updatePasswordButton"
                android:background="@drawable/edge2"

                />

            <Button
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="로그아웃"
                android:layout_marginTop="100dp"
                android:layout_gravity="center"
                android:fontFamily="@font/bmhannaair_ttf"
                android:id="@+id/logoutButton"
                android:background="#ED5315"
                />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>