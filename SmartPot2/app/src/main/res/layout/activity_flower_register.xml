<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FlowerRegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="화분 등록"
                android:fontFamily="@font/bmhannaair_ttf"
                android:textColor="#000000"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"

            >

            <EditText
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:hint="화분 코드"
                android:fontFamily="@font/bmhannaair_ttf"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:id="@+id/potCodeText"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorWhite"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="#179F3A"
                android:text="체크"
                android:fontFamily="@font/bmhannaair_ttf"
                android:layout_gravity="center"
                android:id="@+id/potCodeButton"
                android:textColor="#ffffff"
                />

        </LinearLayout>

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="화분명"
            android:fontFamily="@font/bmhannaair_ttf"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:id="@+id/potNameText"
            android:drawableStart="@drawable/ic_mail_outline_black_24dp"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <Spinner
                android:id="@+id/flowerSpinner"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp">
            </Spinner>

            <Button
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#179F3A"
                android:background="@drawable/edge2"
                android:text="등록하기"
                android:fontFamily="@font/bmhannaair_ttf"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/flowerRegisterButton"
                />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>