<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:fontFamily="@font/bmhannaair_ttf"
            android:text="화분 상태"/>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/potName"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="화분명"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:drawableStart="@drawable/ic_local_florist_black_24dp"
                android:drawableLeft="@drawable/ic_local_florist_black_24dp"
                android:fontFamily="@font/bmhannaair_ttf"

                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/nowCds"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="수위"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:drawableStart="@drawable/full_water"
                android:drawableLeft="@drawable/full_water"
                android:fontFamily="@font/bmhannaair_ttf"

                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/nowPotTemp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="온도"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:drawableStart="@drawable/ic_hightemp"
                android:drawableLeft="@drawable/ic_hightemp"
                android:fontFamily="@font/bmhannaair_ttf"

                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/nowPotWater"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="습도"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:drawableStart="@drawable/ic_opacity_black_24dp"
                android:drawableLeft="@drawable/ic_opacity_black_24dp"
                android:fontFamily="@font/bmhannaair_ttf"

                android:layout_marginRight="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/autoButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:background="@color/colorWhite"
                android:fontFamily="@font/bmhannaair_ttf"
                android:text="자동 수급" />

            <Button
                android:id="@+id/manualButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@color/colorWhite"
                android:fontFamily="@font/bmhannaair_ttf"
                android:text="수동 수급" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>